<%= form_for @recipe do |f| %>

  <%= f.label :name %><br />
  <%= f.text_field :name %><br />

  <%= f.label :description %><br />
  <input name="description" size="30" type="text" /><br />

  <%= f.label :ingredients %><br />  
  <input name="ingredients[][name]" size="30" type="text" />  
  <input name="ingredients[][amount]" size="15" type="text" /><br />

  <%= f.submit %>

<% end %>